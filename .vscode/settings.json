{
  // Use your repo's .venv as the interpreter
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  // On Windows use: "${workspaceFolder}\\.venv\\Scripts\\python.exe"

  // Auto-activate the selected env in *new* terminals
  "python.terminal.activateEnvironment": true,

  // (Optional) also activate the env in the currently-open terminal when the Python extension loads
  "python.terminal.activateEnvInCurrentTerminal": true
}